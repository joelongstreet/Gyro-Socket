body
    margin      : 0
    font-family : Helvetica, Arial, Verdana, sans-serif
    font-size   : 12px
    overflow    : hidden

.ball
    width       : 75px
    height      : 50px
    position    : absolute
    border-radius : 50px
    text-align  : center
    padding-top : 25px
    color       : #fff

.players
    display     : none

.messages
    padding     : 2.5%
    width       : 22.5%
    height      : 100%
    background-color : #E0E0E0
    position    : absolute
    right       : 0

    .user
        font-weight : bold
        margin-right : 5px
    .user:after
        content     : ' said:'

    .container
        padding-left : 15px
        line-height  : 18px
        li
            margin-bottom : 10px



// --- Mobile Page  --- //
a.btn
    display     : block
    color       : #fff
    padding     : 15px
    text-decoration : none
    background-color : black
    font-size   : 15px


#sign_up
    width       : 70%
    margin      : 50px 15%

    label
        font-size   : 20px
        display     : block
        margin-bottom : 10px

    input
        width       : 40%
        padding     : 0
        margin-bottom : 15px
        width       : 100%
        font-size   : 35px

#me
    display     : none

    textarea
        z-index     : 3
        position    : absolute
        bottom      : 20%
        width       : 70%
        left        : 15%
        height      : 25%

    a#send
        z-index     : 3
        position    : absolute
        bottom      : 2.5%
        right       : 15%

    #color
        z-index     : 1
        width       : 100%
        height      : 100%
        position    : absolute

    #name
        z-index     : 2
        position    : absolute
        top         : 20%
        width       : 100%
        text-align  : center
        font-size   : 50px
        color       : #fff
